<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="ProductTemplate">
        <Border Background="Bisque" Width="200" Height="200" CornerRadius="20">
            <StackPanel>
                <Image Width="100" Height="100" Source="{Binding Path=ImgPath}"/>
                <TextBlock FontSize="16" Text="{Binding Path=ID}" HorizontalAlignment="Center"/>
                <TextBlock FontSize="16" Text="{Binding Path=Name}" HorizontalAlignment="Center"/>
                <TextBlock FontSize="16" Text="{Binding Path=Price}" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </DataTemplate>
</ResourceDictionary>